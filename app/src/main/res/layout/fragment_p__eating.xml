<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <Button
                    android:id="@+id/bt_pget"
                    android:layout_width="50dp"
                    android:layout_height="75dp"
                    android:layout_weight="1"
                    android:background="@drawable/silhouette3" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <ImageView
                    android:id="@+id/bt_p1"
                    android:layout_width="50dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:scaleType="fitXY" />

                <ImageView
                    android:id="@+id/bt_p2"
                    android:layout_width="50dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:scaleType="fitXY" />

                <ImageView
                    android:id="@+id/bt_p3"
                    android:layout_width="50dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:scaleType="fitXY" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/background_light">

                <Button
                    android:id="@+id/bt_tp1"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_margin="0.1dp"
                    android:layout_weight="1"
                    android:background="#a04500"
                    android:text="떡메치기"
                    android:textColor="@android:color/background_light" />

                <Button
                    android:id="@+id/bt_tp2"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_margin="0.1dp"
                    android:layout_weight="1"
                    android:background="@android:color/holo_red_dark"
                    android:text="치즈만들기"
                    android:textColor="@android:color/background_light" />

                <Button
                    android:id="@+id/bt_tp3"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_margin="0.1dp"
                    android:layout_weight="1"
                    android:background="#207d9f"
                    android:text="음료만들기"
                    android:textColor="@android:color/background_light" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <ImageView
                    android:id="@+id/bt_p4"
                    android:layout_width="50dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:scaleType="fitXY"/>

                <ImageView
                    android:id="@+id/bt_p5"
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:scaleType="fitXY" />

                <ImageView
                    android:id="@+id/bt_p6"
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:scaleType="fitXY" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/background_light">

                <Button
                    android:id="@+id/bt_tp4"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_margin="0.1dp"
                    android:layout_weight="1"
                    android:background="#35616f"
                    android:text="두부만들기"
                    android:textColor="@android:color/background_light" />

                <Button
                    android:id="@+id/bt_tp5"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_margin="0.1dp"
                    android:layout_weight="1"
                    android:text="COURR" />

                <Button
                    android:id="@+id/bt_tp6"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_margin="0.1dp"
                    android:layout_weight="1"
                    android:text="COURR" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <Button
                    android:id="@+id/bt_pin"
                    android:layout_width="50dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:background="@drawable/map" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </TableLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>